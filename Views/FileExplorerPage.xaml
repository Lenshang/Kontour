<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KontourApp.ViewModels"
             xmlns:models="clr-namespace:KontourApp.Models"
             xmlns:controls="clr-namespace:KontourApp.Controls"
             xmlns:behaviors="clr-namespace:KontourApp.Behaviors"
             xmlns:converters="clr-namespace:KontourApp.Converters"
             xmlns:services="clr-namespace:KontourApp.Services"
             x:Class="KontourApp.Views.FileExplorerPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:SecondsToTimeSpanConverter x:Key="SecondsToTimeSpanConverter" />
            <converters:PlayPauseConverter x:Key="PlayPauseConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:CountToBoolConverter x:Key="CountToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <vm:FileExplorerViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="8" RowSpacing="6" ColumnSpacing="8" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" x:Name="LeftColumn"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- é©±åŠ¨å™¨é€‰æ‹©ï¼ˆå·²éšè—ï¼ŒçŽ°åœ¨ç›´æŽ¥åœ¨æ ‘ä¸­æ˜¾ç¤ºï¼‰ -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                IsVisible="False"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#374151}"
                Padding="8,6"
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#4B5563}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="6"/>
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="5">
                <Label Text="é©±åŠ¨å™¨"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"/>
                <CollectionView ItemsSource="{Binding Drives}"
                                SelectedItem="{Binding SelectedDrive}"
                                SelectionMode="Single"
                                HeightRequest="70">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="6"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:DriveInfoModel">
                            <Border Padding="8,5"
                                    BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#1F2937}"
                                    StrokeThickness="2"
                                    Stroke="#8B5CF6">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="3" WidthRequest="120">
                                    <Label Text="{Binding DisplayName}"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#F9FAFB}"/>
                                    <Label Text="{Binding DisplaySize, StringFormat='æ€»:{0}'}"
                                           FontSize="10"
                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                    <Label Text="{Binding DisplayFreeSpace, StringFormat='å¯ç”¨:{0}'}"
                                           FontSize="10"
                                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                                    <ProgressBar Progress="{Binding UsagePercentage}"
                                                 ProgressColor="#8B5CF6"
                                                 HeightRequest="4"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Border>

        <!-- æ‰©å±•åè¿‡æ»¤å™¨ -->
        <Border Grid.Row="1" Grid.ColumnSpan="2"
                BackgroundColor="{AppThemeBinding Light=#F9FAFB, Dark=#1F2937}"
                Padding="15,8"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="6"/>
            </Border.StrokeShape>
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- å·¦ä¾§ï¼šæ–‡ä»¶ç±»åž‹å’Œæ˜¾ç¤ºæ–‡ä»¶å¤¹ -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10">
                    <Label Text="{Binding Localization[FileType]}"
                           FontSize="14"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"/>
                    <CollectionView ItemsSource="{Binding ExtensionFilters}"
                                   HeightRequest="30">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="15"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:FileExtensionFilterModel">
                                <HorizontalStackLayout Spacing="5">
                                    <CheckBox IsChecked="{Binding IsEnabled}"
                                             VerticalOptions="Center"
                                             Color="#6366F1"/>
                                    <Label Text="{Binding DisplayName}"
                                           FontSize="13"
                                           VerticalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"/>
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                    <!-- æ˜¾ç¤ºæ–‡ä»¶å¤¹é€‰é¡¹ -->
                    <BoxView WidthRequest="1"
                             HeightRequest="20"
                             Color="{AppThemeBinding Light=#D1D5DB, Dark=#4B5563}"
                             VerticalOptions="Center"
                             Margin="5,0"/>
                    <HorizontalStackLayout Spacing="5">
                        <CheckBox IsChecked="{Binding ShowFolders}"
                                 VerticalOptions="Center"
                                 Color="#10B981"/>
                        <Label Text="{Binding Localization[ShowFolders]}"
                               FontSize="13"
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"/>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>
                
                <!-- å³ä¾§ï¼šè¯­è¨€é€‰æ‹©å™¨ -->
                <HorizontalStackLayout Grid.Column="1" Spacing="8">
                    <BoxView WidthRequest="1"
                             HeightRequest="20"
                             Color="{AppThemeBinding Light=#D1D5DB, Dark=#4B5563}"
                             VerticalOptions="Center"/>
                    <Label Text="{Binding Localization[Language]}"
                           FontSize="13"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"/>
                    <Picker ItemsSource="{Binding AvailableLanguages}"
                            SelectedItem="{Binding SelectedLanguage}"
                            ItemDisplayBinding="{Binding NativeName}"
                            FontSize="13"
                            WidthRequest="100"
                            TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- å½“å‰è·¯å¾„å’Œå·¥å…·æŒ‰é’® -->
        <Border Grid.Row="2" Grid.ColumnSpan="2"
                BackgroundColor="{AppThemeBinding Light=#F9FAFB, Dark=#1F2937}"
                Padding="10,6"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="6"/>
            </Border.StrokeShape>
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <HorizontalStackLayout Grid.Column="0" Spacing="8">
                    <Label Text="ðŸ“‚"
                           FontSize="16"
                           VerticalOptions="Center"/>
                    <Label Text="{Binding CurrentPath}"
                           FontSize="13"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Grid.Column="1" Spacing="4">
                    <Button x:Name="NavigateBackButton"
                            Text="â†"
                            Command="{Binding NavigateBackCommand}"
                            BackgroundColor="#6366F1"
                            TextColor="White"
                            CornerRadius="3"
                            Padding="0"
                            FontSize="14"
                            WidthRequest="24"
                            HeightRequest="24"
                            ToolTipProperties.Text=""
                            AutomationProperties.HelpText=""
                            AutomationProperties.Name=""/>
                    <Button x:Name="NavigateUpButton"
                            Text="â†‘"
                            Command="{Binding NavigateUpCommand}"
                            BackgroundColor="#6366F1"
                            TextColor="White"
                            CornerRadius="3"
                            Padding="0"
                            FontSize="14"
                            WidthRequest="24"
                            HeightRequest="24"
                            ToolTipProperties.Text=""
                            AutomationProperties.HelpText=""
                            AutomationProperties.Name=""/>
                    <Button Text="ðŸ”„"
                            Command="{Binding RefreshCommand}"
                            BackgroundColor="#10B981"
                            TextColor="White"
                            CornerRadius="3"
                            Padding="0"
                            FontSize="14"
                            WidthRequest="24"
                            HeightRequest="24"/>
                    
                    <!-- åˆ†éš”çº¿ -->
                    <BoxView WidthRequest="1"
                             HeightRequest="20"
                             Color="{AppThemeBinding Light=#D1D5DB, Dark=#4B5563}"
                             VerticalOptions="Center"
                             Margin="4,0"/>
                    
                    <!-- æ ‘å®½åº¦æŽ§åˆ¶æŒ‰é’® -->
                    <Button Text="â—€"
                            Clicked="OnTreeWidthDecrease"
                            BackgroundColor="#8B5CF6"
                            TextColor="White"
                            CornerRadius="3"
                            Padding="0"
                            FontSize="12"
                            WidthRequest="24"
                            HeightRequest="24"
                            ToolTipProperties.Text="ç¼©å°æ ‘å®½åº¦"/>
                    <Button Text="â–¶"
                            Clicked="OnTreeWidthIncrease"
                            BackgroundColor="#8B5CF6"
                            TextColor="White"
                            CornerRadius="3"
                            Padding="0"
                            FontSize="12"
                            WidthRequest="24"
                            HeightRequest="24"
                            ToolTipProperties.Text="å¢žå¤§æ ‘å®½åº¦"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- å·¦ä¾§æ”¶è—å¤¹å’Œç›®å½•æ ‘ -->
        <Border Grid.Row="3" Grid.Column="0"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#374151}"
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#4B5563}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>
            <ScrollView x:Name="TreeScrollView">
                <VerticalStackLayout Padding="5" Spacing="2">
                    <!-- æ”¶è—å¤¹åŒºåŸŸ -->
                    <VerticalStackLayout Spacing="2"
                                        BindableLayout.ItemsSource="{Binding Favorites}">
                        <BindableLayout.EmptyView>
                            <Border Padding="8,4"
                                    BackgroundColor="Transparent">
                                <Label Text="{Binding Source={RelativeSource AncestorType={x:Type vm:FileExplorerViewModel}}, Path=Localization[NoFavorites]}"
                                       FontSize="10"
                                       TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                                       HorizontalOptions="Center"/>
                            </Border>
                        </BindableLayout.EmptyView>
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:FavoriteItemModel">
                                <Border Padding="4,2"
                                        BackgroundColor="Transparent">
                                    <Grid Padding="4,2" ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Label Grid.Column="0"
                                               Text="{Binding Icon}"
                                               FontSize="12"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Center"/>
                                        
                                        <Label Grid.Column="1"
                                               Text="{Binding Name}"
                                               FontSize="11"
                                               LineBreakMode="TailTruncation"
                                               VerticalOptions="Center"
                                               TextColor="{AppThemeBinding Light=#1F2937, Dark=#F3F4F6}">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer 
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FileExplorerViewModel}}, Path=FavoriteClickedCommand}"
                                                    CommandParameter="{Binding .}"/>
                                            </Label.GestureRecognizers>
                                        </Label>
                                        
                                        <Label Grid.Column="2"
                                               Text="Ã—"
                                               FontSize="12"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Center"
                                               TextColor="{AppThemeBinding Light=#DC2626, Dark=#FCA5A5}">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer 
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FileExplorerViewModel}}, Path=RemoveFromFavoritesCommand}"
                                                    CommandParameter="{Binding .}"/>
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                    
                    <!-- åˆ†éš”çº¿ -->
                    <BoxView HeightRequest="1"
                             Color="{AppThemeBinding Light=#E5E7EB, Dark=#4B5563}"
                             Margin="0,4"
                             IsVisible="{Binding Favorites.Count, Converter={StaticResource CountToBoolConverter}}"/>
                    
                    <!-- ç›®å½•æ ‘ -->
                    <VerticalStackLayout Spacing="2"
                                        BindableLayout.ItemsSource="{Binding DirectoryTree}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:DirectoryTreeNode">
                                <controls:TreeNodeView Node="{Binding .}" />
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Border>

        <!-- æ–‡ä»¶åˆ—è¡¨ -->
        <Border Grid.Row="3" Grid.Column="1"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#374151}"
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#4B5563}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>
            <CollectionView ItemsSource="{Binding FileItems}"
                           SelectionMode="None"
                           x:Name="FileListView">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:FileItemModel">
                        <Border Padding="8,4"
                                x:Name="FileItemBorder"
                                BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}">
                            <Border.Behaviors>
                                <behaviors:FileDragDropBehavior />
                            </Border.Behaviors>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer 
                                    NumberOfTapsRequired="1"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FileExplorerViewModel}}, Path=ItemClickedCommand}"
                                    CommandParameter="{Binding .}"/>
                                <TapGestureRecognizer 
                                    NumberOfTapsRequired="2"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FileExplorerViewModel}}, Path=ItemDoubleClickedCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="130"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0"
                                       Text="{Binding Icon}"
                                       FontSize="18"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"/>

                                <Label Grid.Column="1"
                                       Text="{Binding Name}"
                                       FontSize="12"
                                       VerticalOptions="Center"
                                       LineBreakMode="TailTruncation"
                                       TextColor="{AppThemeBinding Light=#1F2937, Dark=#F9FAFB}"/>

                                <Label Grid.Column="2"
                                       Text="{Binding DisplaySize}"
                                       FontSize="11"
                                       VerticalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>

                                <Label Grid.Column="3"
                                       Text="{Binding DisplayDate}"
                                       FontSize="11"
                                       VerticalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.Header>
                    <Border Padding="8,6"
                            BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#1F2937}">
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="1"
                                   Text="{Binding Source={RelativeSource AncestorType={x:Type vm:FileExplorerViewModel}}, Path=Localization[Name]}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"/>

                            <Label Grid.Column="2"
                                   Text="{Binding Source={RelativeSource AncestorType={x:Type vm:FileExplorerViewModel}}, Path=Localization[Size]}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"/>

                            <Label Grid.Column="3"
                                   Text="{Binding Source={RelativeSource AncestorType={x:Type vm:FileExplorerViewModel}}, Path=Localization[ModifiedDate]}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"/>
                        </Grid>
                    </Border>
                </CollectionView.Header>
            </CollectionView>
        </Border>

        <!-- çŠ¶æ€æ  -->
        <Border Grid.Row="4" Grid.ColumnSpan="2"
                BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#1F2937}"
                Padding="15,8"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="6"/>
            </Border.StrokeShape>
            <Grid ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- å·¦ä¾§çŠ¶æ€ä¿¡æ¯ -->
                <Label Grid.Column="0"
                       Text="{Binding StatusMessage}"
                       FontSize="12"
                       VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                
                <!-- å³ä¾§éŸ³é¢‘æŽ§åˆ¶ -->
                <HorizontalStackLayout Grid.Column="1" Spacing="10">
                    <Label Text="{Binding Localization[Audio]}"
                           FontSize="10"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                    <!-- æ’­æ”¾/æš‚åœæŒ‰é’® -->
                    <Button Text="{Binding IsPlaying, Converter={StaticResource PlayPauseConverter}}"
                            Command="{Binding PlayPauseCommand}"
                            BackgroundColor="#6366F1"
                            TextColor="White"
                            CornerRadius="4"
                            Padding="8,4"
                            FontSize="12"
                            WidthRequest="30"
                            HeightRequest="26"/>
                    
                    <!-- æ’­æ”¾è¿›åº¦æ¡ -->
                    <VerticalStackLayout Spacing="2" WidthRequest="200">
                        <Slider x:Name="ProgressSlider"
                                Minimum="0"
                                Maximum="{Binding Duration}"
                                Value="{Binding CurrentPosition}"
                                MinimumTrackColor="#6366F1"
                                MaximumTrackColor="{AppThemeBinding Light=#D1D5DB, Dark=#4B5563}"
                                ThumbColor="#6366F1"
                                DragCompleted="OnProgressSliderDragCompleted"/>
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding CurrentPosition, Converter={StaticResource SecondsToTimeSpanConverter}, StringFormat='{0:mm\\:ss}'}"
                                   FontSize="10"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="/"
                                   FontSize="10"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="{Binding Duration, Converter={StaticResource SecondsToTimeSpanConverter}, StringFormat='{0:mm\\:ss}'}"
                                   FontSize="10"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    
                    <!-- éŸ³é‡æŽ§åˆ¶ -->
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="ðŸ”Š"
                               FontSize="14"
                               VerticalOptions="Center"/>
                        <Slider Minimum="0"
                                Maximum="1"
                                Value="{Binding Volume}"
                                WidthRequest="80"
                                MinimumTrackColor="#10B981"
                                MaximumTrackColor="{AppThemeBinding Light=#D1D5DB, Dark=#4B5563}"
                                ThumbColor="#10B981"/>
                        <Label Text="{Binding Volume, StringFormat='{0:P0}'}"
                               FontSize="10"
                               VerticalOptions="Center"
                               WidthRequest="35"
                               TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>
            </Grid>
        </Border>
    </Grid>

</ContentPage>
